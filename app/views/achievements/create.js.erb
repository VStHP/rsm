<% if @achievement.errors.any? %>
  $('.achievement-name-invalid').text('<%= @achievement.errors.messages[:name][0] %>');
  $('.achievement-majors-invalid').text('<%= @achievement.errors.messages[:majors][0] %>');
  $('.achievement-organization-invalid').text('<%= @achievement.errors.messages[:organization][0] %>');
  $('.achievement-received_time-invalid').text('<%= @achievement.errors.messages[:received_time][0] %>');
<% else %>
  $('.placeholder-achievement').hide();
  $('#new_achievement').remove();
  $('#btn-add-achievements').show();
  alertify.success('<%= @message %>');
  $('#form-achievements').append('<%= j render(@achievement) %>');
<% end %>
