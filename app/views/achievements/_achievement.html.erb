<div id="info_achievement_<%= achievement.id %>" class="sortable content-section">
  <% if can? :modify, achievement %>
    <span class="form-btn-edit">
      <%= link_to achievement_path(achievement), method: :delete,
        data: {confirm: t("achievements.confirm")}, class: "btn btn-sm btn-default", remote: true do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
      <%= link_to edit_achievement_path(achievement), class: "btn btn-sm btn-default", remote: true do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
    </span>
  <% end %>
  <div>
    <div class="view-field">
      <h3 class="view-control"><strong><%= achievement.name %></strong></h3>
    </div>
  </div>
  <div>
    <div class="view-field">
      <div class="view-control"><%= t "achievements.majors" %>: <%= achievement.majors %></div>
    </div>
  </div>
  <div>
    <div class="view-field">
      <div class="view-control"><%= t "achievements.organization" %>: <%= achievement.organization %></div>
    </div>
  </div>
  <div>
    <div class="view-field">
      <p>
        <span class="view-control" data-control="from-date">
          <%= t "achievements.received_time" %>:
          <%= I18n.l achievement.received_time, format: :long_profile %>
        </span>
      </p>
    </div>
  </div>
</div>
