<% if @club.errors.any? %>
  alertify.error('<%= j (render partial: "shared/error_messages", locals: {object: @club}) %>');
<% else %>
  $('#edit_club_<%= params[:id] %>').remove();
  $('#info_club_<%= params[:id] %>').replaceWith('<%= j render(@club) %>').show();
  alertify.success('<%= flash[:success] %>');
<% end %>
