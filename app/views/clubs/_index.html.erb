<div class="section-detail section-employment">
  <div class="box border-info">
    <fieldset>
      <legend class="box-md">
        <i class="fa fa-fw fa-bank"></i><%= t "clubs._index.club_title" %>
      </legend>
      <div class="placeholder-club box-md <%= define_style_placeholder @clubs %>">
        <% if current_user.is_user? @user %>
          <p class="placeholder"><%= t "clubs._index.describle" %></p>
        <% else %>
          <p class="placeholder"><%= t "placeholder.blank" %></p>
        <% end %>
      </div>
      <div id="form-club">
        <%= render partial: "clubs/club", collection: @clubs, as: :club %>
      </div>
      <% if  current_user.is_user? @user %>
        <%= link_to t("clubs._index.add"), new_club_path, id: "btn-add-club",
          class: "btn btn-default btn-block no-border add-one-more-section", remote: true %>
      <% end %>
    </fieldset>
  </div>
</div>
