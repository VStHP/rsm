<% if @club.errors.any? %>
  $('.club-name-invalid').text('<%= @club.errors.messages[:name][0] %>');
  $('.club-position-invalid').text('<%= @club.errors.messages[:position][0] %>');
  $('.club-start_time-invalid').text('<%= @club.errors.messages[:start_time][0] %>');
  $('.club-end_time-invalid').text('<%= @club.errors.messages[:end_time][0] %>');
  $('.club-content-invalid').text('<%= @club.errors.messages[:content][0] %>');
<% else %>
  $('.placeholder-club').hide();
  $('#new_club').remove();
  $('#btn-add-club').show();
  $('#form-club').append('<%= j render(@club) %>');
  alertify.success('<%= @message %>');
<% end %>
