<header>
  <div class="container">
    <a href="index.html" class="site-logo">
      <i class="fa fa-gg" aria-hidden="true"></i>
      <strong><%= t "index.fram" %></strong><%= t "index.recruit" %>
    </a>
    <nav>
      <a href="javascript:void(0)" class="btn btn-default site-menu-toggle visible-xs visible-sm">
        <i class="fa fa-bars"></i>
      </a>
      <ul class="site-nav">
        <li class="visible-xs visible-sm">
          <a href="javascript:void(0)" class="site-menu-toggle text-center">
            <i class="fa fa-times"></i>
          </a>
        </li>
        <li class="site-nav">
          <a href="javascript:void(0)" class="site-nav-sub"><i class="fa fa-lg fa-bars"></i></a>
          <ul>
            <li>
              <%= link_to edit_user_registration_path(current_user) do %>
                <%= t "users.new.profile" %>
                <i class="fa fa-user fa-fw pull-right"></i>
              <% end %>
            </li>
            <li>
              <%= link_to edit_company_path(@company) do %>
                <%= t "account" %>
                <span class="glyphicon glyphicon-edit pull-right"></span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-ban fa-fw pull-right"></i>
                <%= t("layouts._header.logout") %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
