<div class="create-job-modal" id ="apply_button">
  <button type="button" class="btn btn-primary btn-lg post-job" id="post-job-btn"
    data-toggle="modal" data-target="#JobModal">
    <%= t "apply.applynow" %>
  </button>
  <div class="modal fade" id="JobModal" role="dialog">
    <div class="modal-dialog job-modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">
            <%= t "apply.apply_for" %><%= @job.name %>(<%= t "apply.slary" %>
            <%= @job.min_salary.round.to_s + Settings.currency.dollar %>-
            <%= t "apply.working" %><%= @company.address %>)</h4>
        </div>
        <div class="modal-body" id="job-create-form">
          <div class="container bootstrap snippet">
            <div class="panel-body inf-content">
              <div class="row">
                <div class="col-md-3">
                  <% if current_user.picture.present? %>
                    <%= image_tag current_user.picture.url, class: "img-circle img-thumbnail isTooltip",
                      size: Settings.img_cv %>
                  <% else %>
                    <%= image_tag "avatar_2x.png", class: "img-responsive" %>
                  <% end %>
                </div>
                <div class="col-md-5">
                  <strong><%= t "apply.information" %></strong><br>
                  <div class="table-responsive">
                    <table class="table table-condensed table-responsive table-user-information">
                      <tbody>
                        <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-user text-primary"></span>
                              <%= t "apply.name" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.name %>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-envelope text-primary"></span>
                              <%= t "apply.email" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.email %>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-asterisk text-primary"></span>
                              <%= t "apply.address" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.address %>
                          </td>
                        </tr>
                         <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-phone text-primary"></span>
                              <%= t "apply.phone" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.phone %>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            </div>
          <%= simple_form_for @apply , remote: :true, class: "form-horizontal form-bordered" do |f| %>
            <%= f.hidden_field :job_id %>
            <%= f.hidden_field :user_id %>
            <div class="col-md-9">
              <table class="table table-condensed table-responsive table-user-information">
                <%= f.simple_fields_for :information do |p| %>
                  <%= p.hidden_field :name, value: current_user.name %>
                  <%= p.hidden_field :email, value: current_user.email %>
                  <%= p.hidden_field :phone, value: current_user.phone %>
                  <tr>
                    <td>
                      <strong>
                        <span class="glyphicon glyphicon-asterisk text-primary"></span>
                        <%= t "apply.introducing" %>
                      </strong>
                    </td>
                    <td class="text-primary">
                      <%= p.text_area :introducing, class: "form-control", cols: Settings.text_area.cols,
                        rows: Settings.text_area.rows %>
                    </td>
                  </tr>
                <% end %>
              </table>
            </div>
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <div class = "cv-your">
                  <% if current_user.cv.present? %>
                    <i class="fa fa-book fa-fw"></i><span><%= t "apply.curriculum" %></span>
                    <%= link_to current_user.name, current_user.cv.url %>
                  <% else %>
                    <h3><%= t "apply.not_curriculum" %></h3>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <i class="fa fa-book fa-fw"></i><span><%= t "apply.news_cv" %></span>
                <label class="switch switch-primary">
                  <input type="checkbox" id="checkcv" name="checkcv" value="1">
                  <span></span>
                </label>
                <div class="files_field">
                  <strong class="text-red">*</strong><%= t "downloads.new_cv" %>
                  <span class="btn btn-default btn-file">
                    <%= t "downloads.browse" %><%= f.file_field :cv, id: "file_cv", class: "transparent absolute" %>
                  </span>
                </div>
              </div>
            </div>
            <div class="col-md-8 col-md-offset-4">
              <button type="submit" class="btn btn-sm btn-warning">
                <i class="fa fa-repeat"></i><%= t "apply.apply" %>
              </button>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" id ="reset-job">
            <%= t ".close" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
