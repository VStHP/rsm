<% if @certificate.errors.any? %>
  $('.certificate-name-invalid').text('<%= @certificate.errors.messages[:name][0] %>');
  $('.certificate-majors-invalid').text('<%= @certificate.errors.messages[:majors][0] %>');
  $('.certificate-organization-invalid').text('<%= @certificate.errors.messages[:organization][0] %>');
  $('.certificate-classification-invalid').text('<%= @certificate.errors.messages[:classification][0] %>');
  $('.certificate-received_time-invalid').text('<%= @certificate.errors.messages[:received_time][0] %>');
  alertify.error('<%= j (render partial: "shared/error_messages", locals: {object: @certificate}) %>');
<% else %>
  $('.placeholder-certificate').hide();
  $('#new-certificate').remove();
  $('#btn-add-certificate').show();
  $('#form-certificate').append('<%= j render(@certificate) %>');
  alertify.success('<%= @message %>');
<% end %>

